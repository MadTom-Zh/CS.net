<Window x:Class="MadTomDev.App.WindowInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MadTomDev.App"
        mc:Ignorable="d"
        Title="Input a name" Height="117" Width="400"
        KeyDown="Window_KeyDown">
    <Grid>
        <TextBox x:Name="tb_input" Margin="20,21,19,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"
                 />
        <Button x:Name="btn_ok" Content="_Ok" HorizontalAlignment="Right" Margin="0,0,69,10" 
                VerticalAlignment="Bottom" Height="24" Width="54"
                Click="btn_ok_Click"/>
        <Button x:Name="btn_cancel" Content="_Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" 
                VerticalAlignment="Bottom" Height="24" Width="54"
                Click="btn_cancel_Click"/>

    </Grid>
</Window>
