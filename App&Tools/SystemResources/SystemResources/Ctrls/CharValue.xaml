<UserControl x:Class="MadTomDev.Test.Ctrls.CharValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.Test.Ctrls"
             mc:Ignorable="d" >
    <StackPanel x:Name="sPanel" Orientation="Horizontal" MinHeight="20">
        <Border x:Name="bdr_char" Width="60" BorderBrush="LightGray" BorderThickness="1">
            <TextBlock x:Name="tb_char" Margin="1,0,0,0"></TextBlock>
        </Border>
        <Border x:Name="bdr_value" Width="40" BorderBrush="LightGray" BorderThickness="1">
            <TextBlock x:Name="tb_value" Margin="1,0,0,0"></TextBlock>
        </Border>
    </StackPanel>
</UserControl>
