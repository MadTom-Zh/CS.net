<UserControl x:Class="MadTomDev.Test.Ctrls.IconInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.Test.Ctrls"
             mc:Ignorable="d">
    <Grid Width="120" Height="40">
        <Grid Margin="4,4,0,0"  Width="32" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border BorderBrush="LightGray" BorderThickness="1"></Border>
            <Image x:Name="img32"  
               RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
        </Grid>
        <Grid Margin="40,4,0,0"  Width="16" Height="16" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Border BorderBrush="LightGray" BorderThickness="1"></Border>
            <Image x:Name="img16" 
               RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
        </Grid>
        <TextBlock x:Name="tb" HorizontalAlignment="Left" Margin="40,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
