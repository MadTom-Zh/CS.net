<UserControl x:Class="MadTomDev.App.Ctrls.Board"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.App.Ctrls"
             mc:Ignorable="d" 
             PreviewMouseMove="UserControl_PreviewMouseMove"
             PreviewMouseDown="UserControl_PreviewMouseDown"
             MouseLeave="UserControl_MouseLeave"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             PreviewMouseUp="UserControl_PreviewMouseUp"
             >
    <Grid>
        <StackPanel x:Name="spRows" Orientation="Vertical"
                >
            <StackPanel Orientation="Horizontal">
                <local:Cell></local:Cell>
                <local:Cell></local:Cell>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <local:Cell></local:Cell>
                <local:Cell></local:Cell>
            </StackPanel>
        </StackPanel>
        <TextBox x:Name="tbKeyReceiver" TextChanged="tbKeyReceiver_TextChanged" Height="0"></TextBox>
    </Grid>
</UserControl>
