<UserControl x:Class="MadTomDev.App.Ctrls.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.App.Ctrls"
             mc:Ignorable="d" 
             >
    <Grid Width="60" Height="60">
        <Rectangle x:Name="rectBG" Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"></Rectangle>
        <Border BorderBrush="Gray" BorderThickness="1"></Border>
        <Border x:Name="bdrChecked" BorderBrush="Lime" BorderThickness="6" Visibility="Collapsed"></Border>
        <TextBlock x:Name="tbvChar" Text="A" TextAlignment="Center" VerticalAlignment="Center" FontSize="40"></TextBlock>
    </Grid>
</UserControl>
