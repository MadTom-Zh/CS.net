<Window x:Class="MLW_Succubus_Storys.WindowEndingPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MLW_Succubus_Storys"
        mc:Ignorable="d" Background="Transparent"
        Title="WindowEndingPlayer" Height="450" Width="800"
        Opacity="0" ResizeMode="NoResize" WindowStyle="None"
        ShowInTaskbar="False" AllowsTransparency="True"
        WindowState="Maximized"
        Topmost="True"
        Activated="Window_Activated">
    
    <Grid Background="Black">
        <Image x:Name="img" Opacity="0"></Image>
        <TextBlock x:Name="tb"
                   Foreground="Bisque" TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   FontSize="32" Margin="0,300,0,20"
                   Width="600">
            <TextBlock.Effect>                
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="10">                    
                </DropShadowEffect>
            </TextBlock.Effect>
        </TextBlock>
        <Rectangle Fill="Transparent" PreviewMouseDown="Rectangle_PreviewMouseDown"></Rectangle>
    </Grid>
</Window>
