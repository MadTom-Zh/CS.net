<UserControl x:Class="MadTomDev.App.Ctrls.PortSpeed_linkSpeed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.App.Ctrls"
             mc:Ignorable="d" >
    <Grid>
        <TextBox x:Name="tbv_value" TextWrapping="NoWrap" Text="outerSpeed" IsReadOnly="True"
                 Margin="5,5,30,5" Background="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}" />
        <TextBlock x:Name="tbv_unit" TextWrapping="NoWrap" Text="/s" VerticalAlignment="Center" HorizontalAlignment="Right" Width="20" Margin="0,0,5,0" />

    </Grid>
</UserControl>
