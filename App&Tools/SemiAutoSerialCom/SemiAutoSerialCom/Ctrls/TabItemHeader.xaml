<UserControl x:Class="MadTomDev.App.Ctrls.TabItemHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.App.Ctrls"
             mc:Ignorable="d" 
             Height="28" MinWidth="50">
    <StackPanel x:Name="sp" Orientation="Horizontal">
        <StackPanel>
            <TextBlock x:Name="tb1" Margin="0,-1,0,0" FontSize="10">COM##</TextBlock>
            <TextBlock x:Name="tb2" Margin="0,-1,0,0">Namey##</TextBlock>
        </StackPanel>
        <Button x:Name="btnClose" x:FieldModifier="public" Click="btnClose_Click" Margin="5,2,2,2" Width="16">
            <TextBlock>X</TextBlock>
        </Button>
    </StackPanel>
</UserControl>
