<UserControl x:Class="MadTomDev.App.Ctrls.CheckBoxTranslator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MadTomDev.App.Ctrls"
             mc:Ignorable="d" 
             MinHeight="40" MinWidth="100">
    <CheckBox x:Name="cb" Margin="4" 
              Checked="cb_CheckChanged" Unchecked="cb_CheckChanged">
        <CheckBox.Content>
            <StackPanel>
                <TextBlock x:Name="tbTitle" FontWeight="Bold">title</TextBlock>
                <TextBlock x:Name="tbContent">content</TextBlock>
            </StackPanel>
        </CheckBox.Content>
    </CheckBox>
</UserControl>
